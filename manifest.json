{
  "manifest_version": 3,
  "name": "VinUni Chatbot",
  "version": "1.0",
  "description": "A simple chatbot extension.",
  "icons": {
    "48": "icon48.png"
  },
  "action": {
    "default_icon": {
      "48": "icon48.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
