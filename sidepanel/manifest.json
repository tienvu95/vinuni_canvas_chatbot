// manifest.json

{
  "manifest_version": 3,
  "name": "ChatGPT Popup",
  "description": "Opens a ChatGPT window in the current page.",
  "version": "1.0",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "action": {
 "default_title": "Click to open panel"
  },

  "side_panel": {
  "default_path": "popup.html"
  },

  "permissions": [
    "activeTab",
    "sidePanel"],
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://vinuni.instructure.com/*"],
      "js": ["contentScripts.js"]
    }
  ]
}
